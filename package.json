{
  "name": "xpuz",
  "version": "2.0.0",
  "description": "Parses and creates crossword puzzle files",
  "main": "src/index.js",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register test",
    "build:prod": "NODE_ENV=production node ./scripts/build.js",
    "build:dev": "NODE_ENV=development node ./scripts/build.js",
    "build": "npm run build:prod && npm run build:dev",
    "watch": "rm -rf dist; mkdir dist; watchify --debug --verbose --standalone XPuz -o dist/xpuz.js -g uglifyify -t babelify src/index.js",
    "docs": "rm -rf docs; jsdoc -R README.md -p --package ./package.json -c ./.jsdoc.config.json -t ./node_modules/ink-docstrap/template -r -d docs",
    "docs:watch": "chokidar \"**/*.jsdoc\" \"src/**/*.js\" --verbose -i node_modules -i docs -i dist -c \"npm run docs\"",
    "lint": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/turnerhayes/xpuz.git"
  },
  "keywords": [
    "ipuz",
    "puzzle",
    "puzzles",
    "format"
  ],
  "author": "Turner Hayes <dev@turnerhayes.com>",
  "license": "GPL-3.0",
  "engines": {
    "node": "8.6.0",
    "npm": "5.4.2"
  },
  "bugs": {
    "url": "https://github.com/turnerhayes/xpuz/issues"
  },
  "homepage": "https://github.com/turnerhayes/xpuz#readme",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "chai": "^4.1.2",
    "chokidar": "^1.7.0",
    "del": "^2.2.2",
    "eslint": "^4.9.0",
    "exorcist": "^1.0.0",
    "ink-docstrap": "^1.3.0",
    "jshint": "^2.9.2",
    "jshint-stylish": "^2.2.0",
    "merge-stream": "^1.0.0",
    "mkdirp": "^0.5.1",
    "mocha": "^2.3.4",
    "temp": "^0.8.3",
    "uglifyify": "^4.0.4",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "buffer-reader": "^0.1.0",
    "debug": "^3.1.0",
    "hash-it": "^2.1.2",
    "iconv-lite": "^0.4.13",
    "immutable": "^3.8.2",
    "lodash": "^4.0.0"
  },
  "peerDependencies": {
    "immutable": "^3.8.2"
  }
}
